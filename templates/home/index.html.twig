{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block stylesheets %}

    {# Intégration des feuilles de style parents (boostrap ici) #}
    {{ parent() }} 

    {# Intégration de ma feuille de style #}
    <link href="{{ asset('css/blog.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}




    <h1>Acceuil du blog</h1>

    {% for post in posts %}

        <div class="card-body">
            <h2 class="card-title">{{ post.title }}</h2>
            <span class="badge bg-secondary">{{ post.category.name }}</span>
            <p>Crée par {{ post.author }} le {{ post.createdAt |date("d/m/Y")}}</p>
            <img src="{{ post.image }}" alt="{{ post.title }}">
            <p> {{ post.content | slice(0,150)}}</p>
            <a href="{{ path('post.index', {'slug':post.slug}) }}">Lire la suite</a>
        </div>
        
    {% endfor %}

{% endblock %}
